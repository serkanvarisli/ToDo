@model User
@section nav{
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">To Do</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="index" asp-controller="login" method="post">
                    <center>
                        <h2> GİRİŞ YAP </h2>
                    </center>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" >Mail Adresi</label>
                        <input type="email" id="form1Example13" class="form-control form-control-lg" name="UserMail" asp-for="UserMail" required />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Şifre</label>
                        <input type="password" id="password" name="UserPassword" asp-for=UserPassword class="form-control form-control-lg" required />
                        <input type="checkbox" id="showPassword" /> Şifreyi göster
                    </div>

                    @*  <div class="d-flex justify-content-around align-items-center mb-4">
                    <a href="#!">Şifreni Mi Unuttun ? </a>
                    </div> *@

                    <!-- Submit button -->
                    <center>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
                    </center>
                    <p></p>
                    <br />
                    Hesabın Yok Mu ?
                    <a asp-action="Register" asp-controller="Login">
                        Hemen Kaydol
                    </a>
                </form>
            </div>
        </div>
    </div>
</section>